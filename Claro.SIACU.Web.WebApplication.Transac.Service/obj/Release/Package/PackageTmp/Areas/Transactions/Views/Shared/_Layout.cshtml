<!DOCTYPE html>
<html>
<head>
    @*<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">*@
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    @*<meta http-equiv="X-UA-Compatible" content="IE=9">*@
    <title>- SIAC Único</title>
    <link rel="shortcut icon" href="@Url.Content("~/images/favicon.ico")" />    
    @Styles.Render("~/bundles/bootstrap-addon-css-siacu-txs")    
    @Styles.Render("~/bundles/jquery-addon-css-siacu-txs")
    @Styles.Render("~/bundles/Site-css-siacu-txs")
    @Styles.Render("~/bundles/Site-Transactions-txs")    
    @RenderSection("styles", required: false)
    <script type="text/javascript" src="~/Areas/Transactions/Content/Lib/BloqueoF12.js"></script>
    <script>
        var Session = {};
    </script>
    @Scripts.Render("~/bundles/jquery-siacu")
	<script src="~/Areas/Transactions/ContentTransac/lib/steps.js"></script>
    <style>
        .modal-open {
            overflow: scroll;
        }
    </style>
</head>
<body id="divBody" class="bodynotscroll transac-body">
    <div class="transaction-header claro-red">
        <div class="row">
            <div class="col-xs-4"></div>
            <div class="col-xs-4">
        <h4><strong><span id="spnMainTitle"><label id="lblTitle"></label></span></strong></h4>
    </div>
            <div class="col-xs-4 text-right">
                <h5>
                    <span class="label label-danger">Nodo <span class="badge" style="font-size:10px;"><span id="lblNode">0</span></span></span>
                </h5>
            </div>
        </div>
    </div>
    <br />
    <div class="scroll-content">
        @RenderBody()
    </div>
    
    @Scripts.Render("~/bundles/bootstrap-siacu")
    @Scripts.Render("~/bundles/jquery-addon-siacu")
	<script src="~/Areas/Transactions/Content/Lib/jquery.dataTables.min.js"></script>
    <script src="~/Areas/Transactions/Content/Lib/jquery.dataTables.select.js"></script>
    <script src="~/Areas/Transactions/Content/Lib/jquery.blockUI.js"></script>
    <script src="~/Areas/Transactions/Content/Lib/jquery.smartmenus.js"></script>
    <script src="~/Areas/Transactions/Content/Lib/jquery.smartmenus.bootstrap.js"></script>
    <script src="~/Areas/Transactions/Content/Lib/jquery.numeric.js"></script>
    <script src="~/Areas/Transactions/Content/Lib/dataTables.bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/datepicker-siacu")
	<script src="~/Areas/Transactions/Content/Lib/bootstrap-datepicker.js"></script>
    @Scripts.Render("~/bundles/moment-js-siacu")
	<script src="~/Areas/Transactions/Content/Lib/moment.js"></script>
    <script src="~/Areas/Transactions/Content/Lib/moment-es.js"></script>
    @Scripts.Render("~/bundles/Claro-siacu")
	<script src="~/Areas/Transactions/Content/Scripts/ClaroSession.js"></script>
    <script src="~/Areas/Transactions/Content/Scripts/ClaroAppCommon.js"></script>
    <script src="~/Areas/Transactions/Content/Scripts/ClaroRedirect.js"></script>
    <script src="~/Areas/Transactions/Content/Scripts/plupload.full.min.js"></script>
    <script src="~/Areas/Transactions/Content/Scripts/ClaroModalTemplate.js"></script>
    <script src="~/Areas/Transactions/Content/Scripts/ClaroModalLoad.js"></script>
    <script src="~/Areas/Transactions/Content/Scripts/ClaroCommon.js"></script>
    @Scripts.Render("~/bundles/numeric")
	<script src="~/Content/Lib/jquery.numeric.js"></script>
    <script>
        window.onload = maxWindowPageTransac;
        function maxWindowPageTransac() {
            window.moveTo(0, 0);
            window.resizeTo(screen.width, screen.height);
        }

        $(window).bind('mousewheel DOMMouseScroll', function (event) {
            if (event.ctrlKey == true) {
                $('#content').css({ 'height': "auto" });
            }
        });
    </script>
    @RenderSection("scripts", required: false)

</body>
</html>
