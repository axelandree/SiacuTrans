@using System.Web.Optimization;
@{
    Layout = null;
}
<script type="text/javascript" src="~/Areas/Transactions/Content/Lib/BloqueoF12.js"></script>
<div id="modal-content">
    <div id="RentalEquipment">
        <div @*class="panel panel-info"*@>
            <div class="card">
                <div class="card-block">
                    <h3 class="card-title">Puntos Adicionales</h3>
                    <table class="table table-condensed">
                        <tr>
                            <td>SD</td>
                            <td>
                                <button type="button" id="btnMinSD" class="close btnMin" data-type="SD" style="float: none !important; margin-right: 5px;">-</button>
                                <span id="spnQuantitySD" class="badge">0</span>
                                <button type="button" id="btnMoreSD" class="close btnMore" data-type="SD" style="float: none !important; margin-left: 3px;">+</button>
                            </td>
                        </tr>
                        <tr>
                            <td>HD</td>
                            <td>
                                <button type="button" id="btnMinHD" class="close btnMin" data-type="HD" style="float: none !important; margin-right: 5px;">-</button>
                                <span id="spnQuantityHD" class="badge">0</span>
                                <button type="button" id="btnMoreHD" class="close btnMore" data-type="HD" style="float: none !important; margin-left: 3px;">+</button>
                            </td>
                        </tr>
                        <tr>
                            <td>DVR</td>
                            <td>
                                <button type="button" id="btnMinDVR" class="close btnMin" data-type="DVR" style="float: none !important; margin-right: 5px;">-</button>
                                <span id="spnQuantityDVR" class="badge">0</span>
                                <button type="button" id="btnMoreDVR" class="close btnMore" data-type="DVR" style="float: none !important; margin-left: 3px;">+</button>
                            </td>
                        </tr>
                    </table>
                    <span id="spnQuantityTotal" class="badge" style="display: block; float: right;font-weight: bold">TOTAL 4</span>
                    <br />
                    <span id="spnValueDefault" style="color:red"></span>
                    <span id="spnMsjDecosNotAvailable" style="color:red"></span>
                </div>
            </div>

        </div>
    </div>
</div>

<script src="~/Areas/Transactions/Scripts/PlanMigration/LTEChooseEquipmentByPlan.js"></script>


