@using Claro.SIACU.Web.WebApplication.Transac.Service.Areas.Transactions.Models;
@{
    Layout = "~/Areas/Transactions/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="~/Areas/Transactions/Content/Lib/BloqueoF12.js"></script>
<script language="JavaScript" type="text/JavaScript">

	function minimizar(){
	window.resizeTo(500, 500);
	window.moveTo((screen.width - 500)/2,(screen.height - 400)/2);
						 }; 		
	setTimeout(minimizar,1);
	
</script>
	
<div id="divRepreLegal">
    <div class="container ">
        <input type="hidden" value="@Model.TypeDocumentValidation" id="hdnTipoDocumentValidation" />
        <div class="row">
            <div class="col-md-12">
                <div class="row form-inline">
                    <div class="col-md-3">
                        <label id="lblMensaje" style="color:red;"></label>
                    </div>
                    <div class="col-md-3">
                        <label>Solicitante: </label>
                        <br />
                        <label class="radio-inline col-md-3"><input type="radio" name="optradio" id="rdoTipoSolicitante01" checked="checked" /><span id="lblrdoTipoSolicitante01">Carta Poder</span> </label>
                        <label class="radio-inline col-md-3"><input type="radio" name="optradio" id="rdoTipoSolicitante02" /> <span id="lblrdoTipoSolicitante02">Usuario</span></label>
                        <label class="radio-inline col-md-4"><input type="radio" name="optradio" id="rdoTipoSolicitante03" /><span id="lblrdoTipoSolicitante03">Representante Legal</span> </label>
                    </div>
                </div>
                <div class="row form-inline">

                    <div class="col-md-3">
                        <label for="txtNombreTitular">Nombres: </label>
                        <input type="text" class="form-control input-sm" id="txtNombreTitular" placeholder="Ingrese el Nombre" name="txtFirstName" />
                        <label for="txtApellidosTitular">Apellidos: </label>
                        <input type="text" class="form-control input-sm" id="txtApellidosTitular" placeholder="Ingrese los Apellidos" name="txtLastName" />

                    </div>
                    <div class="col-md-3">
                        <label for="ddlTipoDocumentoTitular">Tipo de Documento: </label>
                        <select class="form-control select-list" id="ddlTipoDocumentoTitular" name="cbDocumentType"></select>
                        <label for="txtNumeroDocumentoTitular">N° Documento: </label>
                        <input class="form-control input-sm solo-numero" id="txtNumeroDocumentoTitular" placeholder="Número de Documento" name="txtNumberDocument" onkeypress="return f_GetValidTipoDocumento('ddlTipoDocumentoTitular', 'txtNumeroDocumentoTitular', this, event)" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="text-align:center;">
            <button id="btnGrabar" type="button" class="btn transaction-button btn-sm" accesskey="btnAceptar">Aceptar</button>
            <button id="btnCerrar" type="button" class="btn transaction-button btn-sm" accesskey="btnCancelar">Cancelar</button>
        </div>
        <div id="loading" style="display:none;">
            <div style="margin: 0px; padding: 0px; border: currentColor; border-image: none; left: 0px; top: 0px; width: 100%; height: 100%; position: fixed; z-index: 1; cursor: wait; opacity: 0.6; background-color: rgb(0, 0, 0); "></div>
            <div align="center" style="border-radius: 10px; margin: 0px; padding: 15px; border: currentColor; border-image: none; left: 35%; top: 40%; width: 30%; text-align: center; color: rgb(255, 255, 255); position: fixed; z-index: 12; cursor: wait; opacity: 0.5; background-color: rgb(0, 0, 0);"><img src="../../Images/loading2.gif" width="25" height="25" /> Cargando .... </div>
        </div>
    </div>
</div>
<script src="~/Areas/Transactions/Scripts/Common/Biometria.js"></script>
<script src="~/Areas/Transactions/Scripts/Common/NoBiometria.js"></script>
<script src="~/Areas/Transactions/Scripts/Redirect/AppRedirect.js"></script>
<script src="~/Areas/Transactions/Content/Scripts/ClaroAppCommon.js"></script>
<script src="~/Areas/Transactions/Scripts/Common/TypeApplicant.js"></script>
