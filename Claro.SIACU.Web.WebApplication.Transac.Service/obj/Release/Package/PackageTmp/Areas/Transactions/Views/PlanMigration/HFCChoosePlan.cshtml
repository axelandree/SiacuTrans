<script type="text/javascript" src="~/Areas/Transactions/Content/Lib/BloqueoF12.js"></script>
<div id="modal-content">
    <div id="ChoosePlan">
        <div class="panel panel-group claro-panel-primary">
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-4">
                        <label for="txtSearchByDescription" class="control-label"> Descripción</label>
                        <input type="text" id="txtSearchByDescription" placeholder="Ingrese texto a buscar y presione enter" class="form-control input-sm" />
                    </div>
                    <div class="col-sm-2 col-sm-offset-6 text-right">
                        <button id="btnClean" type="button" class="btn transaction-button btn-sm"><span class="glyphicon glyphicon-refresh"></span> Limpiar Filtros</button>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-sm-4" id="divSltVigencia">
                        <label for="sltSearchByOptions" class="control-label"> Vigencia</label>
                        <select id="sltSearchByOptions" class="form-control input-sm"></select>
                    </div>
                    <div class="col-sm-4">
                        <label for="sltSearchByCampaign" class="control-label"> Campaña</label>
                        <select class="form-control input-sm" id="sltSearchByCampaign"></select>
                    </div>
                    <div class="col-sm-4">
                        <label for="sltSearchBySolution" class="control-label"> Solución</label>
                        <select class="form-control input-sm" id="sltSearchBySolution"></select>
                    </div>
                </div>
                <br>
            </div>
        </div>


        <table class="table  table-striped table-hover table-responsive claro-modal-tabla" id="tblPlans">
            <thead class="claro-bg-primary">
            <tr>
                <th id="select1" class="col-sm-1">Sel</th>
                <th class="col-sm-4">Nombre del Plan</th>
                <th class="col-sm-3">Campaña</th>
                <th class="col-sm-4">Solución</th>
                <th class="col-sm-1">Vigente</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody id="tblPlansBody"></tbody>
        </table>
    </div>
    <input type="hidden" id="hidCodCampania" value='@System.Configuration.ConfigurationManager.AppSettings["strCodCampaniaColab"].ToString()' />
    <input type="hidden" id="hidMensajeResValCamp" value='@System.Configuration.ConfigurationManager.AppSettings["strMensajeResValCamp"].ToString()' />
    <input type="hidden" id="hidMensajeResUsuClien" value='@System.Configuration.ConfigurationManager.AppSettings["strMensajeResUsuClien"].ToString()' />
    <input type="hidden" id="hidMensajeCantidadMaxima" value='@System.Configuration.ConfigurationManager.AppSettings["strMensajeCantidadMaxima"].ToString()' />
    <input type="hidden" id="hidCambioPlanProy140245" value='@System.Configuration.ConfigurationManager.AppSettings["strCambioPlanProy140245"].ToString()' />
    <input type="hidden" id="hidMsgErrorValidaCampColab" value='@System.Configuration.ConfigurationManager.AppSettings["strMsgErrorValidaCampColab"].ToString()' />
    <input type="hidden" id="hidMsgErrorValidaCantCampColab" value='@System.Configuration.ConfigurationManager.AppSettings["strMsgErrorValidaCantCampColab"].ToString()' />
    <div id="ModalLoading" style="display: none;">
        <span>
            <img src="~/Images/loading2.gif" width="25" height="25" /> Cargando ....
        </span>
    </div>
</div>
