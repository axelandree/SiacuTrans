<script type="text/javascript" src="~/Areas/Transactions/Content/Lib/BloqueoF12.js"></script>
<div id="ActiveDesactiveServiceHFC" class="container-fluid">
    <div class="scrollbudy">
        <div class="col-md-3">
            @Html.Partial("~/Areas/Transactions/Views/Shared/ViewPartial/LeftPanelCustomer.cshtml")
        </div>
        <div id="content" class="col-md-9 transaction-content">
            <div class="transaction-container-step">
                <div class="process">
                    <div class="process-row nav nav-tabs">
                        <div class="process-step process-step-3-left">
                            <button type="button" class="btn btn-circle transaction-button" data-toggle="tab" role="tab" href="#tabPlanYServiciosAdicionales" percent="0%"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>
                            <p>Contrato</p>
                        </div>
                        <div class="process-step process-step-3">
                            <button type="button" class="btn btn-circle transaction-button" data-toggle="tab" role="tab" href="#tabServiciosComplementarios" percent="37.5%" disabled><i class="fa fa-cogs" aria-hidden="true"></i></button>
                            <p>Servicios de Contrato</p>
                        </div>
                        <div class="process-step process-step-3">
                            <button type="button" class="btn btn-circle transaction-button" data-toggle="tab" role="tab" href="#tabFechaProgramada" percent="62.5%" disabled><i class="glyphicon glyphicon-calendar" aria-hidden="true"></i></button>
                            <p>Fechas Programada</p>
                        </div>
                        <div class="process-step process-step-3-right">
                            <button type="button" class="btn btn-circle transaction-button" data-toggle="tab" role="tab" href="#tabResumen" percent="99%" disabled><i class="fa fa-list-ul" aria-hidden="true"></i></button>
                            <p>Resumen</p>
                        </div>

                    </div>
                </div>
                <div class="transaction-progress">
                    <div class="progress transaction-bar">
                        <div id="prog" class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width:0%">
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-content">
                <div id="tabPlanYServiciosAdicionales" class="step tab-pane active" role="tabpanel" percent="0%">
                    <div class="panel claro-panel-primary">
                        <div class="panel-heading">
                            Contratos
                        </div>
                        <div id="HFCAdditionalServicesContratac" class="panel-body">
                            <div class="row">
                                <div class="col-sm-12">
                                    <button type="button" id="btnCheckDevices" class="btn transaction-button btn-sm"><span class="glyphicon glyphicon-phone"></span> Consultar Equipos</button>
                                    <button type="button" id="btnProgramTask" class="btn transaction-button btn-sm"><span class="glyphicon glyphicon-calendar"></span> Tareas Programadas</button>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="tblContracts" class="table table-bordered table-striped">
                                        <thead class="btn-danger">
                                            <tr>
                                                <th></th>
                                                <th>Customer ID</th>
                                                <th>Contrato</th>
                                                <th>Nombre</th>
                                                <th>Estado</th>
                                                <th>Fecha de Activación</th>
                                                <th>Motivo</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td><input type="radio" name="chckContract" class="radio" checked="checked" /></td>
                                                <td id="lblCustomerIds"></td>
                                                <td id="lblContractPage"></td>
                                                <td id="lblName"></td>
                                                <td id="lblState"></td>
                                                <td id="lblDate"></td>
                                                <td id="lblMotive"></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <br />
                        </div>
                        <center>
                            <button type="button" class="btn transaction-button next-step">Siguiente <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></button>
                        </center>
                        <br /><br />
                    </div>
                </div>
                <div id="tabServiciosComplementarios" class="step tab-pane fade" role="tabpanel" percent="37.5%">
                    <div class="panel claro-panel-primary" id="divCompTopConsume">
