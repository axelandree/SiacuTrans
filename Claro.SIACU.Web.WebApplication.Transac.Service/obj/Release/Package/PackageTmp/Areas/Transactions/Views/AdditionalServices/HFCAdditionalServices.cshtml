@{
    Layout = null;
}

<style>
    .input-group-addon-xs {
        font-size: 10px;
    }

    .padding-top-remove {
        padding-top: 0px;
    }

    .margin-bottom-remove {
        margin-bottom: 0px;
    }

    select.input-xs {
        height: 26px;
        line-height: 2px;
        font-size: 11px;
    }

    input.input-xs {
        height: 25px;
        line-height: 1.5;
