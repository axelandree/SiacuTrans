@using Claro.SIACU.Web.WebApplication.Transac.Service.Areas.Transactions.Models;
@{
    Layout = "~/Areas/Transactions/Views/Shared/_Layout.cshtml";
}
    <script type="text/javascript" src="~/Areas/Transactions/Content/Lib/BloqueoF12.js"></script>
	<script language="JavaScript" type="text/JavaScript">
		function minimizar(){
		window.resizeTo(350, 250);
		window.moveTo((screen.width - 300)/2,(screen.height - 200)/2);
							}; 
		setTimeout(minimizar,1);
	</script>
	
<div id="divOptionApplicant" class="container-fluid">
    <div class="row col-md-6" style="text-align: center;">
        <label>
            ¿Cuantos Representantes Legales estan Presentes?
        </label>

        <input type="number" class="solo-numero" value="1" maxlength="1" id="txtCantRep" placeholder="Ingrese la Cantidad" />
        <input type="hidden" value="@Model.CantMax" id="hdnCantMax" />
    </div>
    <div class="row col-md-6" style="text-align: center;">
        <button id="btnAceptar" type="button" class="btn transaction-button btn-sm" accesskey="btnAceptar">Aceptar</button>
        <button id="btnCancelar" type="button" class="btn transaction-button btn-sm" accesskey="btnCancelar">Cancelar</button>
    </div>
    <div>
        <p id="lblMensaje" class="Arial12BV" style="color:Red; font-weight:bold" />
    </div>

    </div>
<script type="text/javascript">

    $('#btnAceptar').off('click').on('click', function () {
       
        if ((parseInt($('#txtCantRep').val()) > parseInt($('#hdnCantMax').val())) || (parseInt($('#txtCantRep').val()) == 0)) {
            $('#lblMensaje').html('Solo se permite un número máximo de: ' + $('#hdnCantMax').val());
        } else {
        window.opener.cantidad = parseInt($('#txtCantRep').val());
        window.close();
        }
       
    });

    $('#btnCancelar').off('click').on('click', function () {
        if (typeof window.opener.cantidad != 'undefined' && window.opener.cantidad != null)
        {
        window.opener.cantidad = 0;
        }
        window.close();
    });
</script>
