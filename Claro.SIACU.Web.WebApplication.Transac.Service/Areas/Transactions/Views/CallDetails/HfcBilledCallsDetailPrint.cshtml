@model Claro.SIACU.Web.WebApplication.Transac.Service.Areas.Transactions.Models.CallDetails.BilledCallsDetailHfcModel
@{
    Layout = "~/Areas/Transactions/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="~/Areas/Transactions/Content/Lib/BloqueoF12.js"></script>
<div id="HFCBilledCallsDetailPrint">   
    <div class="col-sm-12">
        <div class="col-sm-3">
            <img src="~/Images/hm_tim.gif" class="img-responsive img-rounded" alt="Responsive image">
        </div>
        <center>

            <div class="col-sm-6">
                <label><b><u>DETALLE DE LLAMADAS FACTURADAS</u></b></label>
                <br />
                <label>Razon Social: @Model.Customer</label>
                <br />
                <label>Cuenta: @Model.Cuenta</label>
                <br />
                <label>Plan: @Model.Plan</label>
                <br />
                <label>Telefono: @Model.Telephone</label>
            </div>
            <div class="col-sm-3">

            </div>
        </center>
    </div>
    <div id="contenedorDetailVisualizeCall">
        <div class="row">
            <div class="col-sm-12">
                <table id="tblDetalleFacturacionPrintHFC" class="table  table-striped table-hover table-responsive claro-modal-tabla table-bordered">
                    <thead class="claro-bg-primary">
                    <tr>
                        <th class="col-md-1">Nro</th>
                        <th class="col-md-1">Fecha</th>
                        <th class="col-md-1">Hora</th>
                        <th class="col-md-1">Telefono Destino</th>
                        <th class="col-md-1">Nro Cliente</th>
                        <th class="col-md-1">Consumo</th>
                        <th class="col-md-1">Consumo (S/.)</th>
                        <th class="col-md-1">Tipo</th>
                        <th class="col-md-1">Destino</th>
                        <th class="col-md-1">Operador</th>
                    </tr>
                    </thead>
                    <tbody>
                    @{
                        if (Model.ListExportExcel != null)
                    {
                        foreach (var item in Model.ListExportExcel)
                        {
                            <tr>
                                <td class="col-sm-3">@item.CurrentNumber</td>
                                <td class="col-sm-3">@item.StrDate</td>
                                <td class="col-sm-3">@item.StrHour</td>
                                <td class="col-sm-3">@item.TelephoneDestExport</td>
                                <td class="col-sm-3">@item.NroCustomer</td>
                                    <td class="col-sm-3 text-right">@item.Consumption</td>
                                    <td class="col-sm-3 text-right">@item.CargOriginal</td>
                                <td class="col-sm-3">@item.Type</td>
                                <td class="col-sm-3">@item.Destination</td>
                                <td class="col-sm-3">@item.Operator</td>
                                </tr>
                        }
                    }
                    }                    
                    </tbody>
                </table>

                @if (Model.ListExportExcel != null)
                {
                    <span>Total de Registros : @Model.ListExportExcel.Count()</span>
                }
                
                <table id="tbDatoCliente" class="table table-condensed ">
                    <tr>
                        <td>
                            <label class="control-label">Total General Minutos(hh:mm:ss): </label>
                        </td>
                        <td>
                            <span id="lblMovlPost-HotaGeneral">@Model.Total</span>
                        </td>
                        <td>
                            <label><b>&#124;</b></label>
                        </td>
                        <td> <label class="control-label">Total Registros: </label></td>
                        <td><span id="lblMovPost-TotalRegistros"> @Model.TotalRegistro</span></td>
                    </tr>
                </table>                
            </div>
        </div>
    </div>

    <div id="myModalLoadPrint" style="display: none;">
        <span>
            <img src="~/Images/loading2.gif" width="25" height="25"/> Cargando ....
        </span>
    </div>
    <center>
        <div id="botonesConst">
            <table>
                <tr>
                    <td height="50px">
                        <button class="btn transaction-button  btn-sm" type="button" id="btnPrintConstancy"><span class="glyphicon glyphicon-print">&nbsp;</span>Imprimir</button>
                        <button class="btn transaction-button  btn-sm" id="btnCloseConstancy" type="button"><span class="glyphicon glyphicon-remove">&nbsp;</span>Cerrar</button>
                    </td>
                </tr>
            </table>
        </div>
    </center>
</div>


@section scripts{
    @Scripts.Render("~/bundles/Transactions/HFC/HfcBilledCallsDetailPrint")
}


