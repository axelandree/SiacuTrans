@{
    ViewBag.Title = "Consultar Equipos HFC";
    Layout = "~/Areas/Transactions/Views/Shared/_Layout.cshtml";
    ViewBag.TitleHtml = "Consulta de Equipos HFC";
}
<script type="text/javascript" src="~/Areas/Transactions/Content/Lib/BloqueoF12.js"></script>
<div id="CheckDevicesLTE" class="container">
    <br />
    <div class="">
        <div class="row">
            <div id="DataCustomer" class="panel-group" role="tablist" aria-multiselectable="true">
                <div class="panel claro-panel-primary">
                    <div id="customerDataHead" role="tab" class="panel-heading">
                        <span class="glyphicon glyphicon-user"></span>
                        <a data-toggle="collapse" href="#customerDataCollapse" aria-expanded="true" data-parent="#DataCustomer" aria-controls="customerDataCollapse" class="collapsed transaction-ref-color"> Datos del Cliente</a>
                    </div>
                    <div class="panel-body panel-collapse collapse in" id="customerDataCollapse" role="tabpanel" aria-labelledby="customerDataHead">
                        <table class="table table-condensed">
                            <tbody>
                            <tr>
                                <td class="col-md-3">Codigo de Cliente:</td>
                                <td><label id="lblCustomerId"></label> </td>
                            </tr>
                            <tr>
                                <td class="col-md-3">Cuenta:</td>
                                <td><label id="lblAccountNumber"></label></td>
                            </tr>
                            <tr>
                                <td class="col-md-3">Cliente:</td>
                                <td><label id="lblCustomerName"></label></td>
                            </tr>

                            <tr>
                                <td class="col-md-3">Contacto:</td>
                                <td><label id="lblContactName"></label></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-group">
            <div class="panel panel-info">
                <table id="tblCheckDevicesLte" class="table  table-striped table-hover table-responsive claro-modal-tabla table-bordered">
                    <thead>
                    <tr class="claro-bg-primary">
                        <th class="col-md-1">Cod.Material </th>
                        <th class="col-md-2">Cod. SAP</th>
                        <th class="col-md-2">Num. Serie</th>
                        <th class="col-md-2">Mac Ad.</th>
                        <th class="col-md-2">Desc. Material</th>
                        <th class="col-md-2">Tipo Equipo</th>
                        <th class="col-md-2">Código / Id Producto</th>
                        <th class="col-md-2">Modelo</th>
                        <th class="col-md-2">Conv. Tipo</th>
                        <th class="col-md-2">Serv/Parque Principal</th>
                        <th class="col-md-2">Head End</th>
                        <th class="col-md-2">Perfil</th>
                        <th class="col-md-2">Número</th>
                    </tr>
                    </thead>
                    <tbody></tbody>
                </table>
                <div id="myModalLoad" style="display:none;">
                    <span>
                        <img src="~/Images/loading2.gif" width="25" height="25" />  Cargando ....
                    </span>
                </div>
            </div>
        </div>

        <div class="container" align="center">
            <a id="btnClose" class="btn transaction-button btn-sm"><span class="glyphicon glyphicon-home"></span> Cerrar</a>
            <br /><br />
        </div>
    </div>
</div>


<style>
    .modal-open {
        overflow: scroll;
    }
</style>

@section scripts{
    @Scripts.Render("~/bundles/Transactions/HFC/CheckDevices")
    @*<script src="~/Areas/Transactions/Scripts/CheckDevices/HfcCheckDevices.js"></script>*@
}


