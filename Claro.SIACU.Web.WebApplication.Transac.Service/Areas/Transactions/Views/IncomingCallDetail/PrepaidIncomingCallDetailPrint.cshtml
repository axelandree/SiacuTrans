@model Claro.SIACU.Web.WebApplication.Transac.Service.Areas.Transactions.Models.Prepaid.IncomingCallsDetail
@{
        //ViewBag.Title = "DETALLE DE LLAMADAS ENTRANTES PREPAGO";
        Layout = "~/Areas/Transactions/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="~/Areas/Transactions/Content/Lib/BloqueoF12.js"></script>
<script type="text/javascript"> 
    function Print() {
        var btnPrint = document.getElementById("btnPrint");
        var btnClose = document.getElementById("btnClose");

        btnPrint.style.display = "none";
        btnClose.style.display = "none";

        btnPrint.style.visibility = "hidden";
        btnClose.style.visibility = "hidden";
        window.print();

        btnPrint.style.display = "";
        btnClose.style.display = "";

        btnPrint.style.visibility = "visible";
        btnClose.style.visibility = "visible";
    }
    function Close() {
        window.close();
    }
</script>
<div id="IncomingCallDetailPrint">
    <div class="row">
        <div class="col-sm-3">
            <img src="~/Images/hm_tim.gif" class="img-responsive img-rounded" alt="Responsive image">
        </div>
        <div class="col-sm-6">
            <center>
                <label><b><u>DETALLE LLAMADAS ENTRANTES PREPAGO</u></b></label>
                <br />
                <div>
                    @Html.LabelFor(m => m.NumberPhone):
                    @Html.DisplayFor(m => m.NumberPhone)
                </div>
                <div>
                    @Html.LabelFor(m => m.NameClient):
                    @Html.DisplayFor(m => m.NameClient)
                </div>
                <div>
                    <b>Desde:</b>
                    @Html.DisplayFor(m => m.StrStartDate)
                    &nbsp;&nbsp;
                    <b>Hasta:</b>
                    @Html.DisplayFor(m => m.StrEndDate)
                </div>
                <div>
                    @Html.LabelFor(m => m.NameCACDAC):
                    @Html.DisplayFor(m => m.NameCACDAC)
                </div>
            </center>
        </div>
        <div class="col-sm-3">
        </div>
    </div>  
        <br/>
        <div id="contenedorDetailVisualizeCall">
            <div class="row">
                <div class="col-sm-12">
                    <table id="tblDetailVisualizeCall" class="table table-bordered table-hover table-striped">
                        <thead class="btn-danger">
                            <tr>
                                <th class="col-sm-2">N°</th>
                                <th class="col-sm-2">Número</th>
                                <th class="col-sm-2">Fecha</th>
                                <th class="col-sm-2">Hora</th>
                                <th class="col-sm-2">Número Entrante</th>
                                <th class="col-sm-2">Duración</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ListCallsDetail != null)
                            {
                                foreach (var item in Model.ListCallsDetail)
                                {
                                    <tr>
                                        <td class="">@item.NroOrd</td>
                                        <td class="">@item.NumberA </td>
                                        <td class="">@item.Date</td>
                                        <td class="">@item.StartHour</td>
                                        <td class="">@item.NumberB</td>
                                        <td class="">@item.Duration</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
 <br />
<div>
    <center>
        <button id="btnPrint" type="button" class="btn transaction-button btn-sm" onclick="Print()"><span class="glyphicon glyphicon-print"></span> Imprimir</button>&nbsp;&nbsp;&nbsp;&nbsp;
        <button id="btnClose" type="button" class="btn transaction-button btn-sm" onclick="Close()"><span class="glyphicon glyphicon-remove"></span> Cerrar</button>
    </center>
</div>
